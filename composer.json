{
    "name": "mht/phppackage",
    "description": "This is my package phppackage",
    "keywords": [
        "mht",
        "phppackage"
    ],
    "homepage": "https://github.com/mht/phppackage",
    "license": "MIT",
    "authors": [
        {
            "name": "myathtutthu-genie",
            "email": "myathtutthu@geniefintech.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Mht\\PHPPackage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mht\\PHPPackage\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
